<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zoneLabel"
            style="@style/SmallGreenDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="@string/zone_id" />

        <TextView
            android:id="@+id/zoneData"
            style="@style/MediumGrayLightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zoneLabel"
            android:paddingStart="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/companyLabel"
            style="@style/SmallGreenDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zoneLabel"
            android:layout_marginStart="40dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="@string/cane_company" />

        <TextView
            android:id="@+id/companyData"
            style="@style/MediumGrayLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zoneLabel"
            android:layout_alignLeft="@id/companyLabel"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>
</android.support.v7.widget.CardView>