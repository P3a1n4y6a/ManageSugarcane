<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorComplete"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/outerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/innerIdLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/plantId"
                style="@style/SmallGreenDarkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/plant_id" />

            <TextView
                android:id="@+id/plantData"
                style="@style/MediumGrayLightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/innerMoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@id/arrow"
            android:layout_toEndOf="@id/innerIdLayout"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/dateLabel"
                style="@style/SmallGreenDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@string/survey_date" />

            <TextView
                android:id="@+id/dateData"
                style="@style/MediumGrayLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dateLabel"
                android:layout_alignBaseline="@id/dateLabel"
                android:paddingStart="10dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/qcLabel"
                style="@style/SmallGreenDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dateLabel"
                android:layout_below="@id/dateLabel"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@string/qc" />

            <TextView
                android:id="@+id/qcData"
                style="@style/MediumGrayLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateData"
                android:paddingStart="5dp"
                android:layout_alignBaseline="@id/qcLabel"
                android:layout_toRightOf="@id/qcLabel" />

            <TextView
                android:id="@+id/outputLabel"
                style="@style/SmallGreenDarkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dateLabel"
                android:layout_below="@id/qcLabel"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@string/output" />

            <TextView
                android:id="@+id/outputData"
                style="@style/MediumGrayLightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateLabel"
                android:layout_alignBaseline="@id/outputLabel"
                android:layout_toRightOf="@id/outputLabel"
                android:padding="10dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>
</android.support.v7.widget.CardView>